<h1>Contacts</h1>
@if (@Model.Count == 0)
{
   <h3>No contacts have been added yet!</h3>
}
<ol>
    @foreach (var contact in Model)
    {
       <li><a href='/contact/@contact.GetId()'>@contact.GetName()</a></li>
    }
</ol>
<br>
<p><a href='/contact/create'>Create a contact</a></p>
<form action="/contact/clear" method="post">
   <button type="submit" name="button">Clear Contacts</button>
</form>